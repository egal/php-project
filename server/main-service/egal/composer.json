{
    "name": "egal/framework",
    "description": "The Egal Framework.",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.4|^8.1",
        "ext-json": "*",
        "ext-pcntl": "*",
        "laravel/lumen-framework": "^9.0",
        "laravel/helpers": "^1.4",
        "phpdocumentor/reflection-docblock": "^5.2",
        "php-amqplib/php-amqplib": "^2.12|^3",
        "firebase/php-jwt": "^5.2.0",
        "centrifugal/phpcent": "~4.0",
        "league/flysystem-aws-s3-v3": "^1"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.2",
        "phpunit/phpunit": "^8.5.8|^9.3.3",
        "squizlabs/php_codesniffer": "^3.6",
        "slevomat/coding-standard": "^7.0"
    },
    "autoload": {
        "files": [
            "src/Core/helpers.php",
            "src/Model/helpers.php"
        ],
        "psr-4": {
            "Egal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Egal\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Egal\\Core\\ServiceProvider",
                "Egal\\Interface\\ServiceProvider"
            ],
            "aliases": {
                "EgalFilterParser": "Egal\\Core\\Facades\\FilterParser",
                "EgalSelectParser": "Egal\\Core\\Facades\\SelectParser",
                "EgalScopeParser": "Egal\\Core\\Facades\\ScopeParser",
                "EgalOrderParser": "Egal\\Core\\Facades\\OrderParser",
                "EgalGate": "Egal\\Core\\Facades\\Gate",
                "EgalRest": "Egal\\Core\\Facades\\Rest",
                "EgalRoute": "Egal\\Core\\Facades\\Route",
                "EgalInterfaceMetadataManger": "Egal\\Interface\\Facades\\Manager"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
